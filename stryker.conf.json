{
  "$schema": "./node_modules/@stryker-mutator/core/schema/stryker-schema.json",
  "packageManager": "npm",
  "testRunner": "mocha",
  "mochaOptions": {
    "spec": ["test/**/*.test.ts"],
    "require": ["ts-node/register", "test/setup.ts"],
    "config": ".mocharc.json"
  },
  "mutate": [
    "src/**/*.ts",
    "!src/**/*.d.ts",
    "!src/index.ts"
  ],
  "checkers": ["typescript"],
  "tsconfigFile": "tsconfig.json",
  "thresholds": {
    "high": 80,
    "low": 60,
    "break": 50
  },
  "coverageAnalysis": "perTest",
  "timeoutMS": 60000,
  "timeoutFactor": 1.5,
  "maxConcurrentTestRunners": 2,
  "reporters": [
    "html",
    "clear-text",
    "progress"
  ],
  "htmlReporter": {
    "fileName": "reports/mutation/mutation-report.html"
  },
  "ignorePatterns": [
    "dist",
    "node_modules",
    "test",
    "reports",
    "coverage",
    ".nyc_output"
  ],
  "disableTypeChecks": false,
  "symlinkNodeModules": false
}
